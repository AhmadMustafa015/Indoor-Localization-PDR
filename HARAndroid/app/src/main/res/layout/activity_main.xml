<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ededed"
        android:padding="0dp"
        tools:context="io.github.introml.activityrecognition.MainActivity">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TableRow
            android:id="@+id/title_row"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp"
            android:textAlignment="center"
            android:background="@android:color/holo_red_dark">

            <TextView
                android:id="@+id/title"
                android:layout_weight="1"
                android:text="@string/activity"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                />

            <TextView
                android:id="@+id/textView"
                android:layout_weight="1"
                android:text="@string/probability"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"/>
        </TableRow>
        <TableRow
            android:id="@+id/walking_row"
            android:layout_width="match_parent"
            android:layout_height="248dp"
            android:padding="20dp">

            <TextView
                android:id="@+id/walking_title"
                android:layout_weight="1"
                android:text="@string/walking"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/walking_prob"
                android:layout_weight="1"
                android:textAlignment="center"
                android:textSize="18sp" />

        </TableRow>
        <TableRow
            android:id="@+id/upstairs_row"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp">

            <TextView
                android:id="@+id/upstairs_title"
                android:layout_weight="1"
                android:text="@string/upstairs"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/upstairs_prob"
                android:layout_weight="1"
                android:textAlignment="center"
                android:textSize="18sp" />
        </TableRow>
        <TableRow
            android:id="@+id/downstairs_row"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:padding="20dp">

            <TextView
                android:id="@+id/downstairs_title"
                android:layout_weight="1"
                android:text="@string/downstairs"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/downstairs_prob"
                android:layout_weight="1"
                android:textAlignment="center"
                android:textSize="18sp" />
        </TableRow>
        <TableRow
            android:id="@+id/standing_row"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:padding="20dp">

            <TextView
                android:id="@+id/standing_title"
                android:layout_weight="1"
                android:text="@string/Stationary"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/standing_prob"
                android:layout_weight="1"
                android:textAlignment="center"
                android:textSize="18sp" />
        </TableRow>
        <TableRow
            android:id="@+id/jogging_row"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:padding="20dp">

            <TextView
                android:id="@+id/jogging_title"
                android:layout_weight="1"
                android:text="@string/Running"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/jogging_prob"
                android:layout_weight="1"
                android:textAlignment="center"
                android:textSize="18sp" />
        </TableRow>

        <TableRow
            android:id="@+id/elevator_row"
            android:layout_width="match_parent"
            android:layout_height="248dp"
            android:padding="20dp">

            <TextView
                android:id="@+id/elevator_title"
                android:layout_weight="1"
                android:text="@string/Elevator"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/elevator_prob"
                android:layout_weight="1"
                android:textAlignment="center"
                android:textSize="18sp" />

        </TableRow>
        <TableRow
            android:id="@+id/falling_row"
            android:layout_width="match_parent"
            android:layout_height="248dp"
            android:padding="20dp">

            <TextView
                android:id="@+id/falling_title"
                android:layout_weight="1"
                android:text="@string/Falling"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/falling_prob"
                android:layout_weight="1"
                android:textAlignment="center"
                android:textSize="18sp" />

        </TableRow>
        <TableRow
            android:id="@+id/car_row"
            android:layout_width="match_parent"
            android:layout_height="248dp"
            android:padding="20dp">

            <TextView
                android:id="@+id/car_title"
                android:layout_weight="1"
                android:text="@string/Car_In_Out"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/car_prob"
                android:layout_weight="1"
                android:textAlignment="center"
                android:textSize="18sp" />

        </TableRow>
        <TableRow
            android:id="@+id/totalAcc_raw"
            android:layout_width="match_parent"
            android:layout_height="248dp"
            android:padding="20dp">

            <TextView
                android:id="@+id/totalAcc_title"
                android:layout_weight=".3"
                android:text="@string/Total_Acceleration"
                android:textAlignment="textStart"
                android:textSize="13sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/totalAcc_x"
                android:layout_width="wrap_content"
                android:layout_weight=".4"
                android:textAlignment="textStart"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/totalAcc_y"
                android:layout_width="106dp"
                android:layout_weight=".4"
                android:textAlignment="textStart"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/totalAcc_z"
                android:layout_width="110dp"
                android:layout_weight=".4"
                android:textAlignment="textStart"
                android:textSize="13sp" />

        </TableRow>
        <TableRow
            android:id="@+id/linearAcc_raw"
            android:layout_width="match_parent"
            android:layout_height="248dp"
            android:padding="20dp">

            <TextView
                android:id="@+id/linearAcc_title"
                android:layout_width="136dp"
                android:layout_weight=".3"
                android:text="@string/Linear_Acceleration"
                android:textAlignment="textStart"
                android:textSize="13sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/linearAcc_x"
                android:layout_width="wrap_content"
                android:layout_weight=".4"
                android:textAlignment="textStart"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/linearAcc_y"
                android:layout_width="106dp"
                android:layout_weight=".4"
                android:textAlignment="textStart"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/linearAcc_z"
                android:layout_width="110dp"
                android:layout_weight=".4"
                android:textAlignment="textStart"
                android:textSize="13sp" />

        </TableRow>
        <TableRow
            android:id="@+id/gyro_raw"
            android:layout_width="match_parent"
            android:layout_height="248dp"
            android:padding="20dp">

            <TextView
                android:id="@+id/gyro_title"
                android:layout_weight=".3"
                android:text="@string/Gyroscope"
                android:textAlignment="textStart"
                android:textSize="13sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/gyro_x"
                android:layout_width="wrap_content"
                android:layout_weight=".4"
                android:textAlignment="textStart"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/gyro_y"
                android:layout_width="106dp"
                android:layout_weight=".4"
                android:textAlignment="textStart"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/gyro_z"
                android:layout_width="110dp"
                android:layout_weight=".4"
                android:textAlignment="textStart"
                android:textSize="13sp" />

        </TableRow>
    </TableLayout>

</ScrollView>